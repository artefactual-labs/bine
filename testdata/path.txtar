setup .bine.json

exec bine path
cmpenv stdout path1

exec bine path --cache-dir=/tmp/bine-cache-dir
cmp stdout path2

-- .bine.json --
{
    "project": "test",
    "bins": [
        {
            "name": "perpignan",
            "url": "https://github.com/sevein/perpignan",
            "version": "1.0.0",
            "asset_pattern": "{name}_{version}_{goos}_{goarch}"
        }
    ]
}
-- path1 --
$WORK/.tmp/homedir/.cache/bine/test/linux/amd64/bin
-- path2 --
/tmp/bine-cache-dir/test/linux/amd64/bin
