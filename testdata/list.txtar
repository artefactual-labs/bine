setup .bine1.json

bine list
cmp stdout ../list
! stderr .

# Walks parents to find config file.
mkdir foobar
cd foobar
bine list
cmp stdout ../../list
! stderr .
cd ..

bine list --installed
! stdout .
! stderr .

bine sync
bine list --installed
cmp stdout ../list-installed
! stderr .

bine list --installed --json
cmp stdout ../list-installed-json
! stderr .

# Discovers outdated binaries.
bine list --outdated
cmp stdout ../list-outdated
! stderr .

# Discovers outdated Go binaries.
setup .bine2.json
bine list --outdated
cmp stdout ../list-outdated
! stderr .

-- .bine1.json --
{
	"project": "test",
	"bins": [
		{
			"name": "perpignan",
			"url": "https://github.com/sevein/perpignan",
			"version": "1.0.0",
			"asset_pattern": "{name}_{version}_{goos}_{goarch}"
		},
	]
}
-- .bine2.json --
{
    "project": "test",
    "bins": [
        {
            "name": "perpignan",
            "go_package": "github.com/sevein/perpignan",
            "version": "1.0.0"
        }
    ]
}
-- list --
perpignan v1.0.0
-- list-installed --
perpignan v1.0.0
-- list-installed-json --
[
	{
		"name": "perpignan",
		"version": "1.0.0"
	}
]
