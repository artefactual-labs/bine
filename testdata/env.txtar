setup .bine.json

# It looks up the SHELL environment variable.
env SHELL=fish
bine env
cmpenv stdout ../fish.txt
! stderr .

# It looks up the SHELL environment variable.
env SHELL=bash
bine env
cmpenv stdout ../posix.txt
! stderr .

# It fallbacks to Bash when the shell is unrecognized.
env SHELL=shell
bine env
cmpenv stdout ../posix.txt
! stderr .

# Defaults to Bash.
env SHELL=
bine env
cmpenv stdout ../posix.txt
! stderr .

# Accepts the shell as a parameter.
bine env --shell=fish
cmpenv stdout ../fish.txt
! stderr .

-- .bine.json --
{
    "project": "test",
    "bins": [
        {
            "name": "perpignan",
            "url": "https://github.com/sevein/perpignan",
            "version": "1.0.0",
            "asset_pattern": "{name}_{version}_{goos}_{goarch}"
        }
    ]
}
-- fish.txt --
fish_add_path --path $WORK/.tmp/homedir/.cache/bine/test/linux/amd64/bin
-- posix.txt --
export PATH=$WORK/.tmp/homedir/.cache/bine/test/linux/amd64/bin:$$PATH
